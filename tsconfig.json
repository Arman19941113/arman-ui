{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "preserve",
        "strict": true,
        "sourceMap": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src", "example"],
    "exclude": ["node_modules"]
}
